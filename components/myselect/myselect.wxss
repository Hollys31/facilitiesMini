/* components/myselect/myselect.wxss */
 .select {
  width: 158rpx;
  background: #00BADB;
  border-radius: 14rpx;
  position: absolute;
  right: 20rpx;
  top: 10rpx;
  color: #fff;
  text-align: center;
  z-index: 9999;
  overflow: hidden;
  transition: all .2s linear;
}
 .select .img{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 5rpx;
  right: 10rpx;
  transition: all .2s linear;
 }
 .select.active .img{ 
    transform: rotate(180deg) translateY(-10rpx);
  }
.select .selected{
  padding-right: 15rpx;
  font-size: 28rpx;
  height: 46rpx;
  line-height: 46rpx;
  border-radius: 14rpx;
  border: 1px solid #28d0ee;
  border-top: 0;
  position: relative;
}

.select .item{
  display: none;
  height: 46rpx;
  line-height: 46rpx;
  border-bottom: 1px solid #28d0ee;
  font-size: 26rpx;
}
.select.active .item{
  display: block;
}
.select .item:last-child{
  border-bottom: 0;
}