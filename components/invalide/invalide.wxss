/* components/invalide/invalide.wxss */
.modal {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 9997;
  top: 0;
  left: 0;
  bottom: 0;
  range: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-inner {
  width: 560rpx;
  height: 360rpx;
  line-height: 276rpx;
  text-align: center;
  font-size: 32rpx;
  color: #000;
  background: #fff;
  border-radius: 10rpx;
  position: fixed;
  z-index: 9998;
  left: 50%;
  top: 50%;
  margin-left: -280rpx;
  margin-top: -180rpx;
  overflow: hidden;
}


.modal .charge>view {
  width: 50%;
  height: 85rpx;
  font-size: 28rpx;
  color: #00badb;
  line-height: 85rpx;
  float: left;
}

.modal .charge .call {
  color: #fff;
  background: #00badb;
}
.modal .close{
  color: #ccc;
  font-size: 24rpx;
  right: 20rpx;
  top: -110rpx;
   position: absolute;
}