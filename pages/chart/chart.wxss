.chart-wrap {
  width: 710rpx;
  height: 500rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background: #fff;
  border-radius: 20rpx;
  position: relative;
  margin: 0 auto;
}

.chart-wrap .chart {
  width: 710rpx;
  height: 500rpx;
}

.chart-wrap .tips {
  height: 1em;
  line-height: 1.6em;
}

.chart-wrap canvas {
  width: 710rpx;
  height: 460rpx;
  margin: 0 auto;
  padding: 20rpx 0;
}
