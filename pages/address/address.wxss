/* pages/address/address.wxss */

page {
  height: 100%;
}

.map-wrap {
  height: 100%;
}

.map-wrap .map {
  width: 100%;
  height: 100%;
}

.map-wrap .text {
  padding:10rpx 20rpx;
  width: 710rpx;
  height: 135rpx;
  background: #fff;
  box-shadow: 0px 8rpx 12rpx 1px rgba(204, 204, 204, 0.15);
  border-radius: 13rpx;
  position: fixed;
  bottom: 32rpx;
  left: 20rpx;
}
.map-wrap cover-image{
  width: 23rpx;
  height: 27rpx;
  margin-right: 10rpx;
  margin-top: 4rpx;
  display: block;
  float: left
}
.map-wrap .address{
  float: left;
  width: 600rpx;
}
.map-wrap  .name{
  font-size: 30rpx;
  line-height: 2.4em;
}