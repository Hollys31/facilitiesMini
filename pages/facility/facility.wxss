.facilityinfo {
  width: 710rpx;
  height: 273rpx;
  margin: 0 auto;
  background: #fff;
  box-shadow: 0px 8rpx 12rpx 1px rgba(204, 204, 204, 0.15);
  border-radius: 13rpx;
}

.facilityinfo .item {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  overflow: hidden;
  position: relative;
  text-align: right;
  color: #999;
  padding: 0 50rpx;
  border-bottom: 1rpx solid #eee;
}

.facilityinfo .item:last-child {
  border: none;
}

.facilityinfo .item>text {
  position: absolute;
  left: 50rpx;
  color: #000;
}

.delete {
  width: 500rpx;
  height: 85rpx;
  line-height: 85rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  background: #00badb;
  border-radius: 43rpx;
  margin: 40rpx auto;
}
