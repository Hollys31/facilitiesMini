/* pages/facility/facility.wxss */

.f-name {
  height: 150rpx;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0px 15rpx 17rpx 3rpx rgba(204, 204, 204, 0.15);
  border-radius: 0px 0px 30rpx 35rpx;
}

.f-name .img {
  width: 93rpx;
  height: 93rpx;
  border: 1px solid #f5f5f5;
  background: #f5f5f5;
  border-radius: 50%;
  overflow: hidden;
}

.f-name .text {
  width: 460rpx;
  margin: 15rpx 0 0 15rpx;
}

.f-name .state {
  color: #ccc;
  font-size: 20rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.f-name .state .power{
  margin-left: 15rpx;
}
.f-name  .icon {
  font-size: 30rpx;
  margin-top: 30rpx;
  color: #ccc;
}

.f-name  .icon1 {
  font-size: 28rpx;
  color: #ccc;
}

.facility {
  padding: 23rpx 0;
}

.facility .item {
  width: 335rpx;
  height: 202rpx;
  background: #fff;
  box-shadow: 0px 8rpx 12rpx 1px rgba(204, 204, 204, 0.15);
  border-radius: 13px;
  padding: 20rpx;
  margin: 20rpx;
  float: left;
}

.facility .item .icon {
  width: 68rpx;
  height: 50rpx;
  font-size: 30rpx;
  padding-top: 18rpx;
  margin-top: 50rpx;
  float: left;
  background: rgba(74, 74, 74, 0.2);
  border-radius: 50%;
  text-align: center;
}

.facility .item .data {
  width: 200rpx;
  margin-left: 25rpx;
  line-height: 70rpx;
  float: left;
}
facility .item .data view{
  white-space: nowrap;
  height: 70rpx;
  line-height: 70rpx;
}
.facility .item .data text {
  float: right;
}

