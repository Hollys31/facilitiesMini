page{
  padding-bottom: 150rpx;
}
.banner {
  position: relative;
}

.banner image {
  height: 394rpx;
}

.banner .search {
  width: 600rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  border-radius: 11rpx;
  overflow: hidden;
  position: absolute;
  z-index: 2;
  left: 75rpx;
  top: 15rpx;
}

.banner .search input {
  width: 100%;
  height: 100%;
  padding-left: 4%;
}

.banner .search .icon {
  position: absolute;
  z-index: 3;
  top: 0;
  right: 20rpx;
  color: #ccc;
  font-size: 28rpx;
}

.devices {
  width: 710rpx;
  margin: -20rpx auto 0;
  position: relative;
  z-index: 99;
}

