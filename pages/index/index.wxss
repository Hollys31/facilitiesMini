/**index.wxss**/
page{
  padding-bottom: 150rpx;
}
.banner {
  position: relative;
}

.banner image {
  height: 394rpx;
}

.banner .search {
  width: 600rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  border-radius: 11rpx;
  overflow: hidden;
  position: absolute;
  z-index: 2;
  left: 75rpx;
  top: 15rpx;
}

.banner .search input {
  width: 100%;
  height: 100%;
  padding-left: 4%;
}

.banner .search .icon {
  position: absolute;
  z-index: 3;
  top: 0;
  right: 20rpx;
  color: #ccc;
  font-size: 28rpx;
}

.devices {
  width: 710rpx;
  margin: -20rpx auto 0;
  position: relative;
  z-index: 99;
}
.err .err-img{
  width: 132rpx;
  height: 130rpx;
  position: fixed;
  z-index: 9999;
  top: 50%;
  left: 50%;
  margin-left: -66rpx;
  margin-top: -240rpx;
}
.err .context {
  padding-top: 70rpx;
  height: 278rpx;
  line-height: 80rpx;
}
.err .context text{
  display: block;
  color: #ccc;
  font-size: 28rpx;
}
